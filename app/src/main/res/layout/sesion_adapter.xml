<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        android:layout_width="303dp"
        android:layout_height="182dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="10dp"
        android:id="@+id/cardViewSesion"
        app:cardBackgroundColor="@color/cardview_shadow_start_color"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:layout_gravity="center_horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:paddingBottom="10dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/textViewTipo"
                    android:text="Seminario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>

            <TextView
                    android:id="@+id/textViewNombre"
                    android:text="El ser y el lenguaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/dos_puntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>

            <TextView
                    android:id="@+id/textViewHora"
                    android:text="8:00 pm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/duracion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/dos_puntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>

            <TextView
                    android:id="@+id/textViewDuracion"
                    android:text="1 hora y media"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/texto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/dos_puntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>

            <TextView
                    android:id="@+id/textViewTexto"
                    android:text="Segunda parte del Ingenioso Caballero Don Quijote de la Mancha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:text="@string/apartado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:text="@string/dos_puntos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"/>

            <TextView
                    android:id="@+id/textViewApartado"
                    android:text="CapÃ­tulo XXXII De la respuesta que dio don Quijote a su reprehensor, con otros graves y graciosos sucesos."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

        </LinearLayout>



    </LinearLayout>

</android.support.v7.widget.CardView>